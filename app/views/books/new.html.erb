<h1>おすすめの本,教えてください</h1>

<% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with model: @book do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>概要</h4>
    <%= f.text_area :body %>

    <%= f.submit '投稿' %>
<% end %>